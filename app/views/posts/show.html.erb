<h1> Title: <%= @post.title %> </h1>

<h4> Location: <%= @post.location %> </h4>

<h4> Date: <%= @post.date %> </h4>

<h4> Category: <%= @post.category.name %> </h4>


<p> <%= @post.content %>  </p>


<h5> <%= @post.likes.count %> Likes </h5>
<%= link_to "Like", post_likes_path(@post), method: :post  %>

<h5> <%= @post.comments.count %> Comments </h5>
<%= render @post.comments %>
<h3> Add a comment: </h3>
  <%= render 'comments/form' %>

  <%= link_to "Edit Post", edit_post_path(@post)  %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "You really want to do that?" } %>
<%= link_to "Log out", logout_path, method: :delete %>
<%= link_to "Home", posts_path %>
