<h1> Create a new Post </h1>

<%= form_for @post do |f|  %>
<%= f.label "Title: " %><br>
<%= f.text_field :title %><br>
<%= f.label "Location: " %><br>
<%= f.text_field :location %><br>
<%= f.label "Content: " %><br>
<%= f.text_field :content %><br>
<%= f.label "Date: " %><br>
<%= f.text_field :date %><br>
<%= f.label "Category: " %><br>
<%= f.collection_select(:category_id, Category.all, :id, :name) %><br>

<%= f.submit %>
<% end %>
